
<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Art Gallery</title>

    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        nav.navbar {
            background-color: #343a40;
            border: none;
            border-radius: 0;
            margin-bottom: 30px;
        }

        nav.navbar a {
            color: #ffffff;
        }

        .container {
            margin-top: 20px;
        }

        .card {
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            max-height: 200px;
            object-fit: cover;
        }

        .card-title {
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .card-text {
            color: #007bff;
        }

        .btn-outline-primary {
            color: #007bff;
            border-color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <a class="navbar-brand" href="#"></a>
        <ul class="nav navbar-nav">
            <li class="active">
                <a >Art Gallery</a>
            </li>
            <li>
                <a>Hi User</a>
            </li>
            <li>
                <a href="/logout">Logout</a>
            </li>
        </ul>
    </nav>

    
        <div class="container mt-4">
            <h2>Category</h2>
            <a href="/create-category" class="btn btn-sm btn-primary">Add Category</a>
            <hr>
        
            <div class="row">
                <% categories.forEach((item, key) => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <a href="/category/<%= item.id %>">
                                <img src="<%= item.image_path || '/path/to/default/image.jpg' %>" class="card-img-top" alt="<%= item.name %> Image">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title"><%= item.name %></h5>
                                <p class="card-text">Price: <%= item.price %> $</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a onclick="return confirm('Delete this category?')" href="/delete-category/<%= item.id %>" class="btn btn-sm btn-outline-danger">Delete</a>
                                        <a href="/edit-category/<%= item.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        
   
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>

